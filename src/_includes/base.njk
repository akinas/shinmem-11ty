    <style>
  /* Modern Language Switch Styles */
  .lang-switch-container {
    position: absolute;
    top: 25px;
    right: 25px;
    z-index: 1000;
  }
  
  .lang-switch-toggle {
    position: relative;
    display: flex;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 25px;
    padding: 4px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  .lang-switch-toggle:hover {
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
  }
  
  .lang-option {
    position: relative;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: 500;
    font-size: 14px;
    transition: all 0.3s ease;
    cursor: pointer;
    z-index: 2;
    min-width: 70px;
    justify-content: center;
  }
  
  .lang-option-active {
    color: #333;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .lang-option-inactive {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .lang-option-inactive:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }
  
  .lang-code {
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
  }
  
  .lang-name {
    font-size: 13px;
    display: none; /* Hidden by default, shown on larger screens */
  }
  
  /* Animated slider background */
  .lang-switch-slider {
    position: absolute;
    top: 4px;
    left: 4px;
    height: calc(100% - 8px);
    width: calc(50% - 4px);
    background: rgba(255, 255, 255, 0.9);
    border-radius: 18px;
    transition: transform 0.3s ease;
    z-index: 1;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  /* Move slider for RTL/Hebrew */
  html[dir="rtl"] .lang-switch-slider,
  .lang-switch-toggle[data-active="he"] .lang-switch-slider {
    transform: translateX(100%);
  }
  
  /* Responsive Design */
  @media (min-width: 768px) {
    .lang-switch-container {
      top: 30px;
      right: 30px;
    }
    
    .lang-name {
      display: block;
    }
    
    .lang-option {
      min-width: 90px;
      padding: 10px 18px;
    }
    
    .lang-switch-toggle {
      padding: 5px;
    }
  }
  
  @media (max-width: 480px) {
    .lang-switch-container {
      top: 20px;
      right: 20px;
    }
    
    .lang-option {
      min-width: 45px;
      padding: 6px 12px;
    }
    
    .lang-code {
      font-size: 11px;
    }
  }
  
  /* RTL Support */
  html[dir="rtl"] .lang-switch-container {
    left: 25px;
    right: auto;
  }
  
  html[dir="rtl"] .lang-switch-toggle {
    flex-direction: row-reverse;
  }
  
  @media (min-width: 768px) {
    html[dir="rtl"] .lang-switch-container {
      left: 30px;
    }
  }
  
  @media (max-width: 480px) {
    html[dir="rtl"] .lang-switch-container {
      left: 20px;
    }
  }

  /* Book-specific styles */
  .book-navigation {
    position: absolute;
    top: 20px;
    left: 20px;
    z-index: 10;
  }
  
  .back-home-link {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }
  
  .back-home-link:hover {
    opacity: 0.8;
  }
  
  .book-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    line-height: 1.6;
  }
  
  .book-hero {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
    align-items: center;
    margin-bottom: 60px;
    padding: 40px 0;
  }
  
  .book-cover-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .book-cover-image {
    max-width: 100%;
    height: auto;
    max-height: 500px;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .book-cover-image:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }
  
  .book-info {
    padding: 20px 0;
  }
  
  .book-title {
    font-size: 2.8em;
    font-weight: 700;
    margin-bottom: 15px;
    color: var(--dl-color-gray-black);
    line-height: 1.2;
  }
  
  .book-author {
    font-size: 1.4em;
    color: #666;
    margin-bottom: 8px;
    font-weight: 500;
  }
  
  .book-edition {
    font-size: 1.2em;
    color: #888;
    font-style: italic;
    margin-bottom: 30px;
  }
  
  .book-actions-hero {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    margin-top: 25px;
  }
  
  .book-main-content {
    font-size: 1.1em;
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    border-top: 2px solid #eee;
  }
  
  .book-main-content h1,
  .book-main-content h2,
  .book-main-content h3 {
    margin: 30px 0 15px 0;
    color: var(--dl-color-gray-black);
  }
  
  .book-main-content p {
    margin-bottom: 20px;
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .book-hero {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 30px;
    }
    
    .book-cover-image {
      max-height: 400px;
    }
    
    .book-title {
      font-size: 2.2em;
    }
    
    .book-author {
      font-size: 1.2em;
    }
    
    .book-actions-hero {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .book-hero {
      padding: 20px 0;
    }
    
    .book-cover-image {
      max-height: 350px;
    }
    
    .book-title {
      font-size: 1.8em;
    }
    
    .book-actions-hero {
      flex-direction: column;
      align-items: center;
    }
    
    .book-actions-hero .button {
      width: 200px;
      text-align: center;
    }
  }
  
  /* RTL adjustments */
  html[dir="rtl"] .book-navigation {
    left: auto;
    right: 20px;
  }
  
  html[dir="rtl"] .book-hero {
    text-align: right;
  }
  
  html[dir="rtl"] .book-main-content {
    text-align: right;
  }
  
  @media (max-width: 768px) {
    html[dir="rtl"] .book-hero {
      text-align: center;
    }
  }
</style>
    
