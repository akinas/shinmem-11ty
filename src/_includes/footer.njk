{# src/_includes/footer.njk #}
<footer class="modern-footer">
  {# Hero Background Image with Overlay #}
  <div class="footer-hero">
    <div class="footer-hero-bg"></div>
    <div class="footer-hero-overlay"></div>
    
    {# Main Footer Content #}
    <div class="footer-content">
      <div class="footer-main">
        {# Logo & Brand Section #}
        <div class="footer-brand">
          <div class="footer-logo">
            <img
              alt="ShinMem Logo"
              src="https://res.cloudinary.com/dyj4i2vhr/image/upload/v1691749656/logo_shinmem_ship_xfaoqz.jpg"
              class="footer-logo-image"
            />
          </div>
          <h3 class="footer-brand-name">ShinMem | <span dir="rtl">שמע מינה</span></h3>
          {# <p class="footer-tagline">Reviving Ancient Insights, Illuminating Modern Minds</p> #}
        </div>
        
        {# Quick Links #}
        <div class="footer-links">
          <h4 class="footer-section-title">{{ i18n.nav_explore[page.lang] }}</h4>
          <ul class="footer-link-list">
            {% set homepage_url = '/' %}
            {% if page.lang === 'en' %}
                {% set homepage_url = '/en/' %}
            {% endif %}

            <li><a href="{{ homepage_url | url }}" class="footer-link">{{ i18n.nav_homepage[page.lang] | safe }}</a></li>
            {# more links
            <li><a href="#" class="footer-link">{% if page.lang == 'he' %}ספרים{% else %}Books{% endif %}</a></li>
            <li><a href="#" class="footer-link">{% if page.lang == 'he' %}על אודות{% else %}About{% endif %}</a></li>
            <li><a href="#" class="footer-link">{% if page.lang == 'he' %}מחקר{% else %}Research{% endif %}</a></li>
            more links #}
          </ul>
        </div>
        
        {# Contact Info #}
        <div class="footer-contact">
          <h4 class="footer-section-title">{{ i18n.nav_contact[page.lang] }}</h4>
          <div class="footer-contact-info">
            <a href="mailto:daniel@shinmem.org" class="footer-contact-link">
              <svg class="footer-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="m4 4 16 0 0 16-16 0z"/>
                <path d="m4 4 8 8 8-8"/>
              </svg>
              daniel@shinmem.org
            </a>

          </div>
        </div>
        
        {# Newsletter Signup #}
        <div class="footer-newsletter">
          <h4 class="footer-section-title">{{ i18n.nav_social[page.lang] }}</h4>

          {# Singup form
          <p class="footer-newsletter-text">
            {% if page.lang == 'he' %}
              קבל עדכונים על פרסומים חדשים ומחקרים
            {% else %}
              Get updates on new publications and research
            {% endif %}
          </p>
          <form class="footer-newsletter-form">
            <input 
              type="email" 
              placeholder="{% if page.lang == 'he' %}הכנס כתובת מייל{% else %}Enter your email{% endif %}"
              class="footer-newsletter-input"
              aria-label="Email address"
            />
            <button type="submit" class="footer-newsletter-btn">
              <svg class="footer-newsletter-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <line x1="22" y1="2" x2="11" y2="13"/>
                <polygon points="22,2 15,22 11,13 2,9"/>
              </svg>
            </button>
          </form>
          Signup form #}

                      <div class="footer-social">
              <a href="https://x.com/shinmem/" class="footer-social-link" aria-label="Twitter">
                <svg class="footer-social-icon" width="20" height="21" viewBox="0 0 1200 1227" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z" fill="white"/>
</svg>
              </a>
              {# Add more social links as needed #}
            </div>
        </div>
        {# Newsletter Signup #}
      </div>
    </div>
  </div>
  
  {# Copyright Bar #}
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <span class="footer-copyright">© {{ currentYear }} {{ i18n.copyright[page.lang] }}</span>
      {# footer links 
      <div class="footer-bottom-links">
        <a href="#" class="footer-bottom-link">{% if page.lang == 'he' %}מדיניות פרטיות{% else %}Privacy{% endif %}</a>
        <a href="#" class="footer-bottom-link">{% if page.lang == 'he' %}תנאי שימוש{% else %}Terms{% endif %}</a>
      </div>
      footer links #}
    </div>
  </div>
</footer>